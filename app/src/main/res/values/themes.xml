<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kola" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="lightPageBackground">
        <item name="android:background">@color/grey_5</item>
    </style>

    <style name="darkPageBackground">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="darkText">
        <item name="android:textColor">@color/grey_80</item>
    </style>

    <style name="lightText">
        <item name="android:textColor">@color/grey_5</item>
    </style>

    <style name="whiteMainText">
        <item name="android:textColor">@color/grey_5</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="dialogTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialogButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/grey_80</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="moneyText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="defaultEditTextStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_purple_box_background</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/grey_80</item>
        <item name="android:paddingStart">@dimen/medium_space</item>
        <item name="android:paddingEnd">@dimen/medium_space</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/grey_80</item>
    </style>
</resources>